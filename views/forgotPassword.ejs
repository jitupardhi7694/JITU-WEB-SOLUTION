<%- include('./layout/partials/messages.ejs') %>


    <div class="forget-body">
        <div class="container">
            <div class="text-center mx-auto">
                <h4><i class="fa-sharp fa-solid fa-pen-to-square"></i> Forget Your Password </h4>
            </div>

            <div class="col-md-4 mx-auto mt-4 ">
                <form action="" method="post">
                    <div class="mb-3">
                        <input type="password" class="form-control  border rounded-pill" name="password"
                            placeholder="Enter New Password">
                    </div>
                    <div class="mb-3">

                        <input type="password" class="form-control  border rounded-pill" name="confirmPassword"
                            placeholder="Confirm Password">
                    </div>
                    <div class="flex mt-4 text-center">
                        <button class="btn btn-outline-success text-white mr-4"> Submit</button>
                        <a href="/user/login" class=" text-white">Login <i
                                class="fa-sharp fa-solid fa-arrow-right"></i></a>
                    </div>
                </form>
            </div>
        </div>
    </div>