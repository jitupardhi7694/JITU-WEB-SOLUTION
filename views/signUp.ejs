    <div class="register-body">
        <div class="container">
            <div class="text-center mx-auto">

                <h4><i class="fa-sharp fa-solid fa-pen-to-square"></i> <strong>Register </strong></h4>

            </div>

            <div class="col-md-4 mx-auto mt-4 ">
                <form action="" method="post">
                    <div class="mb-3">

                        <input type="text" class="form-control  border rounded-pill" name="name" placeholder="Your Name"
                            required>
                    </div>
                    <div class="mb-3">

                        <input type="email" class="form-control  border rounded-pill" name="email" placeholder="Email"
                            required>
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control  border rounded-pill" name="password"
                            placeholder="  Password" required>
                    </div>
                    <div class="mb-3">

                        <input type="password" class="form-control  border rounded-pill" name="confirmPassword"
                            placeholder="Confirm Password" required>
                    </div>
                    <div class="mb-3">

                        <select class="form-select border rounded-pill" name="role_id" aria-label="Select User Role"
                            required>
                            <option class="text-dark" selected disabled>Select User Role</option>
                            <% userRoles.forEach(function(role) { %>
                                <option class="text-dark" value="<%= role.id %>" <%=selectedRoleName==role.id
                                    ? 'selected' : '' %>
                                    ><%= role.role_name %>
                                </option>
                                <% }) %>


                        </select>
                    </div>
                    <div class="flex mt-4 text-center">
                        <button class="btn btn-outline-success text-white mr-4"> Register</button>
                        <div class="text-success flex    mt-2">
                            <a href="/user/login">
                                <h6>Login </h6>
                            </a>
                            <a href="/user/sendActivationLink">
                                <h6>Resend Activation Email </h6>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>