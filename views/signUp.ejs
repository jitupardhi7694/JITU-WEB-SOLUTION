                                <option class="text-dark" value="1">User</option>

                            </select>
                        </div>
                        <div class="flex mt-4 text-center">
                            <button class="btn btn-outline-success text-white mr-4"> Register</button>
                            <a href="/login" class=" text-white">Login <i
                                    class="fa-sharp fa-solid fa-arrow-right"></i></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>